generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/**
 * ========= AUTH MODELS =========
 */

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens  RefreshToken[]
  watchHistories WatchHistory[]
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

/**
 * ==========add_movies_and_genres===============
 */

model Movie {
  id           String  @id @default(uuid())
  title        String
  description  String
  duration     Int // seconds
  releaseYear  Int
  rating       Float // IMDb-like
  thumbnailUrl String
  videoUrl     String
  isPublished  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  genres         MovieGenre[]
  watchHistories WatchHistory[]
}

model Genre {
  id   String @id @default(uuid())
  name String @unique

  movies MovieGenre[]
}

model MovieGenre {
  movieId String
  genreId String

  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
  genre Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@id([movieId, genreId])
}

model WatchHistory {
  id      String @id @default(uuid())
  userId  String
  movieId String

  progressSec Int // last watched position (seconds)
  durationSec Int // total duration (seconds)
  completed   Boolean @default(false)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
}
